@model List<Questions>
@{
    ViewData["Title"] = "Index";
}

<h1>List of Questions</h1>



<table class="table">
    <thead>
        <tr>
            <th> id </th>
            <th>username</th>
            <th>title</th>
            <th>detail</th>
            <th>posted</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Questions ques in Model)
        {
        <tr>
            <td>@ques.id</td>
            <td>@ques.username</td>
            <td>@ques.title</td>
            <td>@ques.detail</td>
            <td>@ques.posted</td>

            <td>
                <a asp-action="Edit" asp-route-quesid="@ques.id" class="btn btn-primary">Edit Question </a>
                <a asp-action="Edit" asp-route-quesid="@ques.id" class="btn btn-secondary">Edit Answer</a>
                <a asp-controller="Answers" asp-action="ListAnswers" asp-route-questID="@ques.id" class="btn btn-primary">View Answers</a>
            </td>
        </tr>
        }
    </tbody>
</table>   
<a asp-action="NewQuestion" class="btn btn-primary">New Question</a>

